
<div class="container">
  <div class="row">
    <div class="col-md-12">
        <h3><%= @list.title %></h3>
        <hr>
        <p><%= @list.body %></p>
        <form action="/lists/<%= @list.id %>"  method="post">
          <input type="hidden" class="form-control" name="_method" value ="put" />
          <div class="form-group">
            <input type="hidden" class="form-control" name="id" value ="<%= @list.id %>" />
          </div>
          <div class="form-group">
            <input type="hidden" class="form-control" name="title" value = "<%= @list.title %>" />
          </div>
          <div class="form-group">
            <input type="hidden" class="form-control" name="body" value = "<%= @list.body %>" />
          </div>
          <div class="form-group" >
            <input type="checkbox" value = "true"  name= "done" > Mark as Done
          </div>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>
